{
  "name": "react-ui-library-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for developing React based UI libraries",
  "private": true,
  "main": "dist/react-ui-library-boilerplate.js",
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "lint-scss": "stylelint src/scss/**/*.scss --config stylelintrc.json",
    "start": "npm run build:dev & npm run storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --colors"
  },
  "author": "James Humphreys",
  "license": "ISC",
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Safari major versions",
    "last 2 Explorer major versions",
    "last 2 Edge major versions",
    "last 2 ChromeAndroid major versions",
    "last 2 FirefoxAndroid major versions",
    "last 2 iOS major versions",
    "not IE 10"
  ],
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-centered": "^5.1.11",
    "@storybook/addon-knobs": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "rollup": "^1.20.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-scss": "^3.10.0"
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "prop-types": "^15.7.2"
  }
}
